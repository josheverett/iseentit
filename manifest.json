{
  "name": "I SEENT IT!",
  "description": "Keeping track of your movie addiction.",
  "version": "1.3.0",
  "manifest_version": 3,

  "icons": {
    "16": "iseentit.png",
    "48": "iseentit.png",
    "128": "iseentit.png"
  },

  "permissions": [
    "storage"
  ],

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": [
        "https://*.imdb.com/*",
        "https://*.rottentomatoes.com/*"
      ],
      "css": ["iseentit.css"],
      "js": ["iseentit.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["iseentit.png", "iseentit.mp3"],
      "matches": [
        "https://*.imdb.com/*",
        "https://*.rottentomatoes.com/*"
      ]
    }
  ]
}
